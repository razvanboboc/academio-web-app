@using  Influencers.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
</head>
<body>
    <div class="d-flex flex-column">
        <div class="d-flex flex-row">
            <nav class="flex-fill navbar navbar-expand-lg navbar-light " style=" background-color:#f1f1f1">
                <a class="navbar-brand" asp-area="" asp-controller="Article" asp-action="Index">
                    <img src="~/Images/logoacademio4.png" alt="Sample Photo" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">

                        <li class="nav-item user-action-button @Html.IsSelected(actions: "AddArticle", controllers: "Article")">
                            <a class="nav-link text-dark" href="@Url.Action("AddArticle", "Article")">Add Article</a>
                        </li>


                        <li class="nav-item user-action-button @Html.IsSelected(actions: "JoinInfluencers", controllers: "Author")">
                            <a class="nav-link text-dark" href="@Url.Action("JoinInfluencers", "Author")">Join Academio</a>
                        </li>


                        <li class="nav-item user-action-button @Html.IsSelected(actions: "Ranking", controllers: "Author")">
                            <a class="nav-link text-dark" href="@Url.Action("Ranking", "Author")">Ranking</a>
                        </li>
                    </ul>
                    @using (Html.BeginForm("Index", "Article", FormMethod.Get))
                    {
                        @Html.TextBox("flag");<input type="submit" value="Search" />
                    }
                </div>
            </nav>
        </div>
        <div class="flex-fill d-flex flex-row">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <div class="footer text-center" style="background-color: #F1F1F1">
                &copy; 2021 - Academio - <a asp-area="" asp-controller="Article" asp-action="Index">Homepage</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>


<style>
        li {
            background-color: none;
            list-style: none;
            float: left;
            padding-right: 2%;
        }

        .nav_selected {
        }

        .nav-item {
            list-style: none;
            font: 14px calibri;
            background-color: none;
            padding: 10px;
        }

            .nav-item:hover {
                background-color: lightskyblue;
            }

        .selected {
            background-color: lightskyblue;
        }

        .user-action-button {
            margin-top: .25em;
            font-size: 16px;
            /*border: solid black;*/
            color: #4682b4;
            font-weight: bold;
            border-bottom-left-radius: 8.5px;
            border-bottom-right-radius: 8.5px;
            border-top-left-radius: 8.5px;
            border-top-right-radius: 8.5px; 
            /*border-radius:5%; */
            margin-left: .1em;
            margin-right: .1em;
            padding-left: .3em;
            padding-right: .3em;
        }

        /*a {
            text-decoration: none;
        }*/
    </style>

<script>
    $('#press').click(function () {
       var url = '@Url.Action("Index", "Article")';
       var textValue = $('#textbox').val();

       window.location.href = url + '?id=' + textValue;
    });
</script>